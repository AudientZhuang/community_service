/* pages/login/login.wxss */
page {
  background-color: #f5f5f5;
}
.logo_title {
  font-weight: 700;
  font-size: 28px;
  margin-bottom: 25px;
}
.logo {
  text-align: center;
  margin: 40px auto;
  margin-bottom: 15px;
}
.logo image {
  width: 300px;
  height: 200px;
}
.login {
  text-align: center;
}
.login_body {
  margin-left: 20px;
  margin-right: 20px;
}
.choose-login {
  display: block;
}
.login button {
  margin-bottom: 10px;
}
.form-item {
  border-radius: 10px;
  background: white;
  margin-bottom: 20px;
  font-size: 17px;
  padding: 16px 10px;
  display: flex;
  align-items: center;
}
.form-item-icon {
  padding-top: 3px;
  margin-right: 17px;
  width: 50px;
  border-right: 1px solid rgba(128, 128, 128, 0.589);
}
.form-item-icon image {
  width: 20px;
  height: 20px;
}
.form-item-input {
  flex: 1;
  text-align: left;
}
.visitor {
  color: #576b95;
}
