page {
  background: white;
}
.pay-header {
  padding: 96rpx 64rpx;
  text-align: center;
}
.pay-title {
  font-size: 44rpx;
  font-weight: 700;
  line-height: 1.36;
}
.pay-price {
  font-weight: 700;
  font-size: 56rpx;
  padding-top: 40rpx;
  padding-bottom: 80rpx;
  border-bottom: 2rpx solid #f5f5f5; 
}
.desc-item {
  font-size: 28rpx;
  margin-left: 60rpx;
}
.desc-item text {
  color: grey;
}
.item-detail {
  padding: 40rpx;
}
.bg_layer {
  position: fixed; left: 0; top: 0; bottom: 0; right: 0;
  background-color: rgba(0, 0, 0, 0.6); z-index: 9998;
}
.input_main {
  position: fixed; left: 0; bottom: 500rpx; width: 100%; height: 394rpx;
  background-color: #fff; z-index: 9999;
}
.input_title {
  width: 100%; height: 90rpx; line-height: 90rpx; text-align: center; 
  font-size: 32rpx; border-bottom: 1rpx solid #e2e2e2;
}
.input_back {
  position: absolute; left: 0; top: 0;
  width: 80rpx; height: 90rpx; display: flex; justify-content: center; align-items: center;
}
.input_back text {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(-45deg);
}
.input_tip{  
  margin: 30rpx; 
  font-size: 24rpx; 
  color: #888; 
}
.input_row {
  width: 690rpx; 
  margin: 0 auto; 
  height: 98rpx; 
  position: relative;
  display: flex;
  align-items: center; 
  border: 1rpx solid #e2e2e2; 
  border-radius: 20rpx;
}
.input_row .pwd_item {
  flex: 1; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  height: 100%; 
  border-right: 1rpx solid #e2e2e2; 
  position: relative;
}
.pwd_item:nth-last-of-type(1) { 
  border-right: 0;
} 
.pwd_item text { 
  width: 30rpx; 
  height: 30rpx; 
  border-radius: 30rpx; 
  background-color: #555;
}
.input_control { 
  position: relative; 
  left: -300rpx; 
  bottom: 0; 
  width: 100rpx; 
  height: 100rpx;
}