<update-pannel name="请输入旧密码" desc="Enter Old Password">
  <mp-toptips msg="{{warnMsg}}" type="error" show="{{isError}}"></mp-toptips>
  <view class="update-box">
    <view class="update-box-label">
      <label>旧密码</label>
    </view>
    <view class="update-box-input">
      <input type="password" placeholder="请输入旧密码" bind:blur="testPwd"></input>
    </view>
    <view class="input-tick" style="display:{{isDisplay}}">
      <image src="/assets/p-i-icon/tick.svg"></image>
    </view>
  </view>
  <button type="primary" bind:tap="submitOldPwd">确认</button>
  <info-footer text="智能社区服务平台"/>
</update-pannel>
