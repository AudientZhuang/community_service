/* pages/profile/child-components/profile-list-item/profile-list-item.wxss */
.profile-list-item {
  position: relative;
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  background-color: white;
  padding-top: 40rpx;
}

.list-item-icon {
  display: inline-block;
  width: 50rpx;
  margin-right: 10rpx;
}

.list-item-icon image {
  width: 100%;
  height: 50rpx;
  vertical-align: -2px;
}

.list-item-text {
  display: inline-block;
  font-size: 28rpx;
  color: #353535;
}

.list-item-r-icon {
  position: absolute;
  top: 36rpx;
  right: 50rpx;
  width: 50rpx;
  height: 50rpx;
}

.list-item-r-icon image {
  width: 100%;
  height: 100%;
}