<!--pages/profile/child-components/profile-list-item/profile-list-item.wxml-->
<view class="profile-list-item" bind:tap="itemClick">
  <view class="list-item-icon">
    <image class="list-item-icon-img" src="{{iconPath}}"/>
  </view>
  <view class="list-item-text">
    <text>{{name}}</text>
  </view>
  <view class="list-item-r-icon">
    <image class="list-item-r-icon-img" src="/assets/profile/r_arrow.svg"></image>
  </view>
</view>
