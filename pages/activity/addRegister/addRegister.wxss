/* pages/activity/addRegister/addRegister.wxss */
page {
  background:  white;
}
.form-header {
  padding: 96rpx 64rpx;
  text-align: center;
}
.form-title {
  font-size: 44rpx;
  font-weight: 700;
  line-height: 1.36;
}
.form-tips {
  color: #888888;
  font-size: 30rpx;
  margin-top: 32rpx;
}
.form-body {
  padding: 40rpx;
}
.form-item {
  border: 2rpx solid #cecece;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  font-size: 34rpx;
  padding: 32rpx 40rpx;
  display: flex;
  align-items: center;
}
.form-item-label {
  margin-right: 32rpx;
  width: 170rpx;
  border-right: 2rpx solid #cecece;
}
.form-item-input {
  flex: 1;
}
.input-tick {
  width: 40rpx;
  height: 40rpx;
}